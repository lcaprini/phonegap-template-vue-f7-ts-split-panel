{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "jsx": "preserve",
        "target": "es5",
        "typeRoots": [
            "node_modules/@types",
            "./@types",
            "./src/assets/js/**"
        ],
        "strict": false,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["/*"],
            "@fonts/*": ["assets/fonts/*"],
            "@js/*": ["assets/js/*"],
            "@sass/*": ["assets/sass/*"]
        }
    },
    "include": [
        "typings/**/*",
        "src/**/*.ts"
    ],
    "indent": [
        true,
        "spaces",
        4
    ],
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts",
        "src/**/__tests__/*.ts"
    ],
    "compileOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
